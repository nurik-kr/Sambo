<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1731C5"
    tools:context=".ui.bottomNav.userFragment.UserFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/gilroy_light"
        android:text="@string/MyProfile"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_marginTop="17dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="100dp"
            android:background="@drawable/bg_conteiner_compet"
            android:layout_height="wrap_content">
            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/white"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/parentOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16sp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/photoUser"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="18dp"
                            android:src="@drawable/image_i"
                            android:scaleType="centerCrop"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvIzmenitPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:layout_marginStart="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/photo"
                            android:textColor="#1731C5"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@+id/photoUser"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/Fio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="16dp"
                            android:text="Константинов Константин"
                            android:textColor="#1731C5"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/photoUser" />

                        <TextView
                            android:id="@+id/tvNumberSchool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="4dp"
                            android:text="школа 1234"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/Fio" />

                        <TextView
                            android:id="@+id/svyasSoMnoi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="37dp"
                            android:layout_marginTop="30dp"
                            android:text="Связаться со мной"
                            android:textColor="#1731C5"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvNumberSchool" />

                        <TextView
                            android:id="@+id/vkCom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="37dp"
                            android:layout_marginTop="4dp"
                            android:text="vk.com/konstantinov"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/svyasSoMnoi" />

                        <TextView
                            android:id="@+id/Instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="37dp"
                            android:layout_marginTop="10dp"
                            android:text="instagram.com/konstantinov"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/vkCom" />

                        <TextView
                            android:id="@+id/oboMne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="37dp"
                            android:layout_marginTop="30dp"
                            android:text="Обо мне"
                            android:textColor="#1731C5"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/Instagram" />

                        <TextView
                            android:id="@+id/descOboMne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="37dp"
                            android:layout_marginTop="4dp"
                            android:text="КМС по самбо "
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/oboMne" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/image_button"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/descOboMne" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="30sp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="33dp"
                        android:src="@drawable/bg_group1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvSettingsInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="81dp"
                        android:layout_marginTop="33dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/gilroy_light"
                        android:gravity="center"
                        android:text="Настройки личной информации"
                        android:textColor="#1731C5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="75dp"
                        android:src="@drawable/bg_information"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvOproekte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="81dp"
                        android:layout_marginTop="80dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/gilroy_light"
                        android:gravity="center"
                        android:text="О проекте"
                        android:textColor="#1731C5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="41dp"
                        android:layout_marginTop="122dp"
                        android:src="@drawable/bg_place"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMapSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="81dp"
                        android:layout_marginTop="126dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/gilroy_light"
                        android:gravity="center"
                        android:text="Смотреть карту школ на сайте"
                        android:textColor="#1731C5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="195dp"
                        android:src="@drawable/bg_exit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvExit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="81dp"
                        android:layout_marginTop="199dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/gilroy_light"
                        android:gravity="center"
                        android:text="Выход"
                        android:textColor="#1731C5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>